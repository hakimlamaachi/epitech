{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zone</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ zone.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ zone.title }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ zone.prix }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{% if zone.duree %}{{ zone.duree|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ zone.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('zone_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('zone_edit', { 'id': zone.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
