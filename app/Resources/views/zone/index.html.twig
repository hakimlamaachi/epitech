{% extends 'base.html.twig' %}

{% block body %}
    <h1>Zone list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Prix</th>
                <th>Duree</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td><a href="{{ path('zone_show', { 'id': zone.id }) }}">{{ zone.id }}</a></td>
                <td>{{ zone.title }}</td>
                <td>{{ zone.prix }}</td>
                <td>{% if zone.duree %}{{ zone.duree|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ zone.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('zone_show', { 'id': zone.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('zone_edit', { 'id': zone.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('zone_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
