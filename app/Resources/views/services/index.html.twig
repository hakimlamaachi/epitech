{% extends 'base.html.twig' %}

{% block body %}
    <h1>Services list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Color</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td><a href="{{ path('services_show', { 'id': service.id }) }}">{{ service.id }}</a></td>
                <td>{{ service.title }}</td>
                <td>{{ service.color }}</td>
                <td>{{ service.description }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('services_show', { 'id': service.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('services_edit', { 'id': service.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('services_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
