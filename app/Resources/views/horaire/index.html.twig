{% extends 'base.html.twig' %}

{% block body %}
    <h1>Horaire list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Indexjour</th>
                <th>Starttime</th>
                <th>Endtime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horaire in horaires %}
            <tr>
                <td><a href="{{ path('horaire_show', { 'id': horaire.id }) }}">{{ horaire.id }}</a></td>
                <td>{{ horaire.indexJour }}</td>
                <td>{% if horaire.startTime %}{{ horaire.startTime|date('H:i:s') }}{% endif %}</td>
                <td>{% if horaire.endTime %}{{ horaire.endTime|date('H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('horaire_show', { 'id': horaire.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('horaire_edit', { 'id': horaire.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('horaire_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
