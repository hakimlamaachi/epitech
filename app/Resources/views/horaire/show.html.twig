{% extends 'base.html.twig' %}

{% block body %}
    <h1>Horaire</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ horaire.id }}</td>
            </tr>
            <tr>
                <th>Indexjour</th>
                <td>{{ horaire.indexJour }}</td>
            </tr>
            <tr>
                <th>Starttime</th>
                <td>{% if horaire.startTime %}{{ horaire.startTime|date('H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Endtime</th>
                <td>{% if horaire.endTime %}{{ horaire.endTime|date('H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('horaire_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('horaire_edit', { 'id': horaire.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
