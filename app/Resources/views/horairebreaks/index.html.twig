                <td>
                    <ul>
                        <li>
                            <a href="{{ path('horairebreaks_show', { 'id': horaireBreak.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('horairebreaks_edit', { 'id': horaireBreak.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('horairebreaks_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
