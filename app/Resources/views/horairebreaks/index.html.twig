    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Starttime</th>
                <th>Endtime</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for horaireBreak in horaireBreaks %}
            <tr>
                <td><a href="{{ path('horairebreaks_show', { 'id': horaireBreak.id }) }}">{{ horaireBreak.id }}</a></td>
